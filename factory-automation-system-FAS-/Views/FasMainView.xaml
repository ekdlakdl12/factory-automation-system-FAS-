                    <Grid Margin="0,2">
                        <TextBlock Text="GOOD" Foreground="Blue"/>
                        <TextBlock Text="0" HorizontalAlignment="Right"/>
                    </Grid>
                    <Grid Margin="0,2">
                        <TextBlock Text="DEFECT" Foreground="Red"/>
                        <TextBlock Text="0" HorizontalAlignment="Right"/>
                    </Grid>
                    <Border Background="Black" Padding="10" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock x:Name="TxtTemp" Text="{Binding Temp, StringFormat='TEMP: {0}°C', FallbackValue='TEMP: --°C'}" Foreground="Lime" FontFamily="Consolas" FontSize="14"/>
                            <TextBlock x:Name="TxtHumi" Text="{Binding Humi, StringFormat='HUMI: {0}%', FallbackValue='HUMI: --%'}" Foreground="Lime" FontFamily="Consolas" FontSize="14"/>
                            <TextBlock x:Name="TxtCo2"  Text="{Binding Co2,  StringFormat='CO2 : {0}ppm', FallbackValue='CO2 : --ppm'}" Foreground="Lime" FontFamily="Consolas" FontSize="14"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>

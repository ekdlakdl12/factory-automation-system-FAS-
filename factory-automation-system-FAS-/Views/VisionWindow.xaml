<Window x:Class="factory_automation_system_FAS_.Views.VisionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="비전 검사 모니터링 시스템" Height="600" Width="1000" 
        Background="#F3F3F3" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="제품별 검사 요약 (더블클릭 시 상세 조회)" VerticalAlignment="Center" FontWeight="Bold"/>
                <Button Content="새로고침" Width="100" Margin="20,0,0,0" Click="btnRefresh_Click"/>
            </StackPanel>

            <GroupBox Header="검사 요약 현황" Grid.Row="1" Margin="5">
                <DataGrid x:Name="dgVisionSummary" 
                          ItemsSource="{Binding VisionSummaryList}"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          SelectionMode="Single"
                          MouseDoubleClick="dgVisionSummary_MouseDoubleClick"
                          SelectionChanged="dgVisionSummary_SelectionChanged"
                          AlternatingRowBackground="#F9F9F9">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="컨베이어" Binding="{Binding conv_id}" Width="70"/>

                        <DataGridTextColumn Header="바코드" Binding="{Binding barcode}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="총수량" Binding="{Binding TotalCount}" Width="60"/>

                        <DataGridTextColumn Header="불량여부" Binding="{Binding FinalStatus}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="들어온시간" Binding="{Binding LastTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <GroupBox Header="최근 검사 이미지" Grid.Column="1" Margin="5">
            <Border Background="Black" CornerRadius="5">
                <Image x:Name="imgPreview" Stretch="Uniform" Margin="2"/>
            </Border>
        </GroupBox>
    </Grid>
</Window>
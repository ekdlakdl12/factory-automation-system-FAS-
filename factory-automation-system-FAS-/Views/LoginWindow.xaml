<Window x:Class="factory_automation_system_FAS_.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="관리자 로그인"
        Height="520" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#0B0F14"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="Bg" Color="#0B0F14"/>
        <SolidColorBrush x:Key="Card" Color="#161E27"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#26313D"/>
        <SolidColorBrush x:Key="Accent" Color="#33E6A2"/>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="#121820"/>
            <Setter Property="Foreground" Value="#E6EEF6"/>
            <Setter Property="BorderBrush" Value="#26313D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="#121820"/>
            <Setter Property="Foreground" Value="#E6EEF6"/>
            <Setter Property="BorderBrush" Value="#26313D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Border Background="{StaticResource Card}"
                BorderBrush="{StaticResource BorderSoft}"
                BorderThickness="1"
                CornerRadius="18"
                Padding="22">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <StackPanel Grid.Row="0" Margin="0,0,0,18">
                    <TextBlock Text="DT Control Center" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="관리자 로그인" FontSize="13" Foreground="#8FA0B0" Margin="0,6,0,0"/>
                </StackPanel>

                <!-- ID -->
                <TextBlock Grid.Row="1" Text="ID" Foreground="#8FA0B0" Margin="2,0,0,6"/>
                <TextBox Grid.Row="2"
                         Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,14"/>

                <!-- PW -->
                <TextBlock Grid.Row="3" Text="Password" Foreground="#8FA0B0" Margin="2,0,0,6"/>
                <PasswordBox Grid.Row="4"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Margin="0,0,0,10"/>

                <!-- Error / Lock -->
                <StackPanel Grid.Row="5" Margin="0,0,0,10">
                    <TextBlock Text="{Binding Error}" Foreground="#FF6B6B" FontSize="12" TextWrapping="Wrap" Margin="2,0,0,6"/>
                    <TextBlock Text="{Binding LockMessage}" Foreground="#F5A524" FontSize="12" TextWrapping="Wrap" Margin="2,0,0,0"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="종료" Background="#26313D" Foreground="White" Click="Exit_Click" Margin="0,0,10,0"/>
                    <Button Content="로그인" Background="{StaticResource Accent}" Foreground="Black" Command="{Binding LoginCommand}" IsDefault="True"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

<Window x:Class="factory_automation_system_FAS_.Views.ProductionQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="생산조회"
        Height="720" Width="1100"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <SolidColorBrush x:Key="Bg" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="Panel" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="Card" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#D7DEE8"/>
        <SolidColorBrush x:Key="Accent" Color="#2EE6A6"/>

        <Style TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="BorderBrush" Value="#D7DEE8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F0F3F7"/>
                        <Setter Property="Foreground" Value="#0F172A"/>
                        <Setter Property="BorderBrush" Value="#D7DEE8"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,6"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,14">
            <StackPanel DockPanel.Dock="Left">
                <TextBlock Text="생산조회" FontSize="22" FontWeight="Bold" Foreground="#0F172A"/>
                <TextBlock Text="(MVP) DB 연동 전: 스키마 기반 탭/컬럼만 선구현 (데이터는 비어있을 수 있음)"
                           Foreground="#64748B" FontSize="12" Margin="0,6,0,0"/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="CSV로 받기"
                        Background="{StaticResource Accent}"
                        Foreground="#0B1220"
                        Margin="0,0,10,0"
                        Command="{Binding ExportCsvCommand}"/>

                <!-- ✅ 창 닫기 대신: 메인으로 돌아가기 -->
                <Button Content="닫기"
                        Background="#E2E8F0"
                        Foreground="#0F172A"
                        Command="{Binding DataContext.NavigateHomeCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>
        </DockPanel>

        <Border Grid.Row="1"
                Background="{StaticResource Card}"
                BorderBrush="{StaticResource BorderSoft}"
                BorderThickness="1"
                CornerRadius="14"
                Padding="14">

            <!-- 아래는 zip의 ProductionQueryWindow.xaml 그대로 유지(중간 생략 없이 유지해야 함) -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TabControl Grid.Row="0" Margin="0,0,0,12">
                    <TabItem Header="MVP 테이블(스키마)">
                        <TextBlock Text="(탭/컬럼 스키마 MVP)"
                                   Foreground="#64748B"
                                   Margin="10"/>
                    </TabItem>
                </TabControl>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding PreviewTable}"
                          />
            </Grid>

        </Border>
    </Grid>
</Window>

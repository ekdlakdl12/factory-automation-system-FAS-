<UserControl x:Class="factory_automation_system_FAS_.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:factory_automation_system_FAS_.Utils"
             Background="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#FFFFFF"
                BorderBrush="#D7DEE8"
                BorderThickness="1"
                CornerRadius="14"
                Padding="14"
                Margin="0,0,0,12">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="설정 (유저관리)"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#0F172A"/>
                    <TextBlock Text="users.local.csv 기반 유저 추가/수정/삭제/비번재설정"
                               Margin="0,6,0,0"
                               Foreground="#64748B"/>
                </StackPanel>

                <Button DockPanel.Dock="Right"
                        Content="새로고침"
                        Height="38"
                        Padding="16,0"
                        BorderThickness="0"
                        Background="#E6ECF4"
                        Foreground="#0B1220"
                        FontWeight="SemiBold"
                        Command="{Binding ReloadCommand}"/>
            </DockPanel>
        </Border>

        <!-- Body -->
        <Border Grid.Row="1"
                Background="#FFFFFF"
                BorderBrush="#D7DEE8"
                BorderThickness="1"
                CornerRadius="14"
                Padding="14">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.15*"/>
                    <ColumnDefinition Width="0.85*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Users list -->
                <DataGrid Grid.Column="0"
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          RowHeaderWidth="0"
                          BorderBrush="#D7DEE8"
                          BorderThickness="1"
                          Background="#FFFFFF">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="1.2*"/>
                        <DataGridTextColumn Header="이름" Binding="{Binding DisplayName}" Width="1.6*"/>
                        <DataGridTextColumn Header="권한" Binding="{Binding Role}" Width="1.0*"/>
                        <DataGridCheckBoxColumn Header="사용" Binding="{Binding Enabled}" Width="0.6*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Right: Detail + New user -->
                <ScrollViewer Grid.Column="1" Margin="12,0,0,0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- Selected user edit -->
                        <TextBlock Text="선택 사용자"
                                   FontWeight="SemiBold"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,8"/>

                        <Grid Margin="0,0,0,14">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ID" Foreground="#475569" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding SelectedUser.Id}"
                                     IsReadOnly="True"
                                     Background="#F8FAFC"
                                     BorderBrush="#D7DEE8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="이름" Foreground="#475569" Margin="0,8,0,0" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Margin="0,8,0,0"
                                     Text="{Binding SelectedDisplayName, UpdateSourceTrigger=PropertyChanged}"
                                     BorderBrush="#D7DEE8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="권한" Foreground="#475569" Margin="0,8,0,0" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="2" Grid.Column="1"
                                      Margin="0,8,0,0"
                                      SelectedValue="{Binding SelectedRole}"
                                      BorderBrush="#D7DEE8">
                                <ComboBoxItem Content="Admin"/>
                                <ComboBoxItem Content="User"/>
                            </ComboBox>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="사용" Foreground="#475569" Margin="0,8,0,0" VerticalAlignment="Center"/>
                            <CheckBox Grid.Row="3" Grid.Column="1"
                                      Margin="0,8,0,0"
                                      IsChecked="{Binding SelectedEnabled}"
                                      Content="Enabled"
                                      Foreground="#0F172A"/>

                            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Content="저장"
                                        Height="38"
                                        Padding="16,0"
                                        Margin="0,0,10,0"
                                        BorderThickness="0"
                                        Background="#2EE6A6"
                                        Foreground="#0B1220"
                                        FontWeight="Bold"
                                        Command="{Binding ApplySelectedCommand}"/>

                                <Button Content="삭제"
                                        Height="38"
                                        Padding="16,0"
                                        BorderThickness="0"
                                        Background="#FDE2E2"
                                        Foreground="#7F1D1D"
                                        FontWeight="SemiBold"
                                        Command="{Binding DeleteUserCommand}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Reset password -->
                        <TextBlock Text="비밀번호 재설정"
                                   FontWeight="SemiBold"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <PasswordBox Width="220"
                                         Height="32"
                                         BorderBrush="#D7DEE8"
                                         utils:PasswordBoxBinder.BoundPassword="{Binding ResetPassword, Mode=TwoWay}"/>

                            <Button Content="재설정"
                                    Height="38"
                                    Padding="16,0"
                                    Margin="10,0,0,0"
                                    BorderThickness="0"
                                    Background="#E6ECF4"
                                    Foreground="#0B1220"
                                    FontWeight="SemiBold"
                                    Command="{Binding ResetPasswordCommand}"/>
                        </StackPanel>

                        <Border Height="1" Background="#E6ECF4" Margin="0,4,0,14"/>

                        <!-- New user -->
                        <TextBlock Text="신규 사용자 추가"
                                   FontWeight="SemiBold"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,8"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ID" Foreground="#475569" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding NewUserId, UpdateSourceTrigger=PropertyChanged}"
                                     BorderBrush="#D7DEE8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="이름" Foreground="#475569" Margin="0,8,0,0" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Margin="0,8,0,0"
                                     Text="{Binding NewDisplayName}"
                                     BorderBrush="#D7DEE8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="권한" Foreground="#475569" Margin="0,8,0,0" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="2" Grid.Column="1"
                                      Margin="0,8,0,0"
                                      SelectedValue="{Binding NewRole}"
                                      BorderBrush="#D7DEE8">
                                <ComboBoxItem Content="Admin"/>
                                <ComboBoxItem Content="User"/>
                            </ComboBox>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="사용" Foreground="#475569" Margin="0,8,0,0" VerticalAlignment="Center"/>
                            <CheckBox Grid.Row="3" Grid.Column="1"
                                      Margin="0,8,0,0"
                                      IsChecked="{Binding NewEnabled}"
                                      Content="Enabled"
                                      Foreground="#0F172A"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="PW" Foreground="#475569" Margin="0,8,0,0" VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,8,0,0">
                                <PasswordBox Width="220"
                                             Height="32"
                                             BorderBrush="#D7DEE8"
                                             utils:PasswordBoxBinder.BoundPassword="{Binding NewPassword, Mode=TwoWay}"/>

                                <Button Content="추가"
                                        Height="38"
                                        Padding="16,0"
                                        Margin="10,0,0,0"
                                        BorderThickness="0"
                                        Background="#2EE6A6"
                                        Foreground="#0B1220"
                                        FontWeight="Bold"
                                        Command="{Binding AddUserCommand}"/>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>

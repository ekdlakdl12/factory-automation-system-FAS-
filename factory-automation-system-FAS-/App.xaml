<Application x:Class="factory_automation_system_FAS_.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <!-- 전역 테마 리소스: MapView 디자이너(XDG) 경고 제거 + 어디서든 DynamicResource로 사용 가능 -->
        <SolidColorBrush x:Key="Bg" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="Panel" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="Card" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#D7DEE8"/>

        <SolidColorBrush x:Key="Accent" Color="#2EE6A6"/>
        <SolidColorBrush x:Key="AccentSoft" Color="#22B892"/>
        <SolidColorBrush x:Key="Station" Color="#2563EB"/>
        <SolidColorBrush x:Key="Output" Color="#D97706"/>

        <!-- ===== Map Overlay Brushes (for rendering on top of map image) ===== -->
        <SolidColorBrush x:Key="MapOverlayFill" Color="#33FFFFFF"/>
        <!-- 20% 흰색 -->
        <SolidColorBrush x:Key="MapOverlayStroke" Color="#FF1B1F27"/>
        <!-- 진한 선 -->
        <SolidColorBrush x:Key="MapOverlayStrokeSoft" Color="#802B3340"/>
        <!-- 부드러운 선 -->
        <SolidColorBrush x:Key="MapOverlayAccent" Color="#FF2EE6A6"/>
        <!-- 기존 Accent와 맞춤 -->
        <SolidColorBrush x:Key="MapOverlayFault" Color="#FFE11D48"/>
        <!-- 빨강(고정) -->

    </Application.Resources>
</Application>

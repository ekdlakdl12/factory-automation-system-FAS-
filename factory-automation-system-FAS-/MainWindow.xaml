<Window x:Class="SmartFactory100.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartFactory100"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <StackPanel Height="980" Width="1500" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Frame VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="MainFrame" Height="1020" Width="1500" Source="MainPage.xaml"/>
        </StackPanel>
        <StackPanel Height="980" Width="420" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Frame HorizontalAlignment="Right" Height="1020" Width="420" Source="Sidebar.xaml"/>
        </StackPanel>
    </Grid>
</Window>

+using factory_automation_system_FAS_.Utils;
+using Microsoft.Win32;
+using System;
+using System.ComponentModel;
+using System.Data;
+using System.Runtime.CompilerServices;
+using System.Windows;
+using System.Windows.Input;
+
+namespace factory_automation_system_FAS_.ViewModels
+{
+    public sealed class ProductionQueryViewModel : INotifyPropertyChanged
+    {
+        public DataTable Table { get; }
+        public DataView TableView => Table.DefaultView;
+
+        public bool HasRows => Table.Rows.Count > 0;
+
+        public ICommand ExportCsvCommand { get; }
+
+        public ProductionQueryViewModel()
+        {
+            Table = CreateDefaultTable();
+            ExportCsvCommand = new RelayCommand(ExportCsv);
+        }
+
+        private static DataTable CreateDefaultTable()
+        {
+            var dt = new DataTable();
+
+            // ✅ 아직 컬럼 정의가 없으니, "일단" 참고용 기본 컬럼만 넣어둠.
+            // 나중에 너가 원하는 열로 갈아끼우면 DataGrid/CSV가 자동으로 따라감.
+            dt.Columns.Add("Time", typeof(string));
+            dt.Columns.Add("ProductId", typeof(string));
+            dt.Columns.Add("From", typeof(string));
+            dt.Columns.Add("To", typeof(string));
+            dt.Columns.Add("Note", typeof(string));
+
+            return dt;
+        }
+
+        private void ExportCsv()
+        {
+            try
+            {
+                var dlg = new SaveFileDialog
+                {
+                    Title = "생산조회 CSV 저장",
+                    Filter = "CSV (*.csv)|*.csv",
+                    FileName = $"production_query_{DateTime.Now:yyyyMMdd_HHmmss}.csv"
+                };
+
+                if (dlg.ShowDialog() != true)
+                    return;
+
+                CsvUtil.WriteDataTableToCsv(Table, dlg.FileName);
+                MessageBox.Show("CSV 저장 완료!", "OK", MessageBoxButton.OK, MessageBoxImage.Information);
+            }
+            catch (Exception ex)
+            {
+                MessageBox.Show($"CSV 저장 실패: {ex.Message}", "Error", MessageBoxButton.OK, MessageBoxImage.Error);
+            }
+        }
+
+        public event PropertyChangedEventHandler? PropertyChanged;
+        private void OnPropertyChanged([CallerMemberName] string? name = null)
+            => PropertyChanged?.Invoke(this, new PropertyChangedEventArgs(name));
+    }
+}

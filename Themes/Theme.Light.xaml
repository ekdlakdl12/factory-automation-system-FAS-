<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== Core Brushes (Light) ===== -->
    <SolidColorBrush x:Key="Bg" Color="#F5F7FA"/>
    <SolidColorBrush x:Key="Panel" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Card" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BorderSoft" Color="#D7DEE8"/>
    <SolidColorBrush x:Key="Accent" Color="#2EE6A6"/>

    <SolidColorBrush x:Key="TextStrong" Color="#0F172A"/>
    <SolidColorBrush x:Key="TextSub" Color="#64748B"/>

    <!-- Map/Grid background helper -->
    <DrawingBrush x:Key="GridBrush"
                  TileMode="Tile"
                  Viewport="0,0,40,40" ViewportUnits="Absolute"
                  Viewbox="0,0,40,40" ViewboxUnits="Absolute">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,40,40"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="#0F000000">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <LineGeometry StartPoint="0,0" EndPoint="40,0"/>
                            <LineGeometry StartPoint="0,0" EndPoint="0,40"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <!-- Phase 1: safest implicit style -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextStrong}"/>
    </Style>

    <!-- Phase 2 (safe): Button 기본값만 -->
    <Style TargetType="Button">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Keyed style (원할 때만 사용) -->
    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource Accent}"/>
        <Setter Property="Foreground" Value="#0B0F14"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,0"/>
        <Setter Property="Height" Value="38"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>